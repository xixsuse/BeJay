<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="60dp"
    tools:context="rocks.itsnotrocketscience.bejay.event.create.CreateEventFragment">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_name"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <TableLayout
        android:id="@+id/tableLayoutDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textInputLayoutName"
        android:padding="15dp"
        android:stretchColumns="*">
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Today"
                android:padding="3dip" />
            <TextView
                android:text="3pm"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Today."
                android:padding="3dip" />
            <TextView
                android:text="9pm"
                android:padding="3dip" />
        </TableRow>
    </TableLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayoutDateTime">

        <EditText
            android:id="@+id/etDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_details"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInputLayoutDetails">

        <EditText
            android:id="@+id/etLocation"
            android:drawableRight="@drawable/ic_place_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_location" />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>
