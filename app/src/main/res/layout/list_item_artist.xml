<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_prefered_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/view_padding"
    android:paddingBottom="@dimen/view_padding">
    <ImageView
        android:id="@+id/picture"
        android:paddingRight="4dp"
        android:layout_width="@dimen/list_item_prefered_icon_size"
        android:layout_height="@dimen/list_item_prefered_icon_size"/>
    <TextView
        android:id="@+id/name"
        android:paddingLeft="@dimen/view_padding"
        tools:text="Rage Against The Machine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="?attr/listPreferredItemHeight"
        android:gravity="left|center_vertical"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>
