<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rocks.itsnotrocketscience.bejay.home.EventSearchFragment">


    <Button
        android:text="All Public Events"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:id="@+id/btAllPublicEvents"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21" />

    <Button
        android:text="Friends Events"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:id="@+id/btFindFriendsEvents"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btEventsNearMe"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:text="Search Events"
        android:layout_width="328dp"
        android:layout_height="53dp"
        android:id="@+id/btSearchEvents"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btFindFriendsEvents"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="16dp" />

    <Button
        android:text="Events Near Me"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:id="@+id/btEventsNearMe"
        app:layout_constraintTop_toBottomOf="@+id/btAllPublicEvents"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
